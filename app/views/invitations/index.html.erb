<h1><%= Invitation.model_name.human(count: 2) %></h1>

<% if @invitations.empty? %>

    <p>No invitations found.</p>
<% else %>
<table>
    <thead>
    <tr>
        <th>
            <%= Person.human_attribute_name(:name) %>
        </th>
        <th>
            <%= t 'title' %>
        </th>
        <th>
            <%= t 'category' %>
        </th>
        <th>
            <%= t 'Delivered at' %>
        </th>

        <th>
            <%= t 'Received at' %>
        </th>
        <th>
            <%= t 'Invite ' %>
        </th>
        <th>
            <%= t 'index_actions' %>
        </th>
    </tr>
    </thead>

    <tbody>
    <% @persons.each do |person| %>

    <tr>
        <td>
            <%= link_to person.name, person_path(person) %>
        </td>

        <td>
            <%= person.title %>
        </td>

        <td>
            <%= event.person.category %>
        </td>

        <td>
            <%= invitation.send_at %>
        </td>

        <td>
            <%= invitation.received_at %>
        </td>
        <td>
            <%= invitation.attend %>
        </td>

        <td>
           <%= link_to t('.edit'), edit_person_path(person) %><br>
           <%= link_to "Delete", person_path(person), {method: :delete, class: 'small', confirm: 'Are you sure?'} %>
        </td>
   </tr>

    <% end %>
    </tbody>
</table>
<% end %>


