<%= form_for @event do |f| %>
    <% @event.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>

    <div class="row">
        <div class="large-8 columns">
            <%= f.label :name %>
            <%= f.text_field :name %>
        </div>
    </div>

    <div class="row">
        <div class="large-8 columns">
            <%= f.label :description %>
            <%= f.text_area  :description %>
        </div>
    </div>

    <div class="row">
        <div class="large-8 columns">
            <%= f.label :start_at %>
            <%= f.date_field :start_at %>
        </div>
    </div>


    <div class="row">
        <div class="large-8 columns">
            <%= f.label :end_at %>
            <%= f.date_field :end_at %>
        </div>
    </div>

    <%= f.submit t('.save'), class: 'round button' %>
<% end %>
