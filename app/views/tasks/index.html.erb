<h1><%= Task.model_name.human(count: 2) %></h1>

<% if @tasks.empty? %>

    <p>No tasks found.</p>
<% else %>
<table>
    <thead>
    <tr>
        <th>
            <%= Task.human_attribute_name(:title) %>
        </th>
        <th>
            <%= t '.date_header' %>
        </th>
        <th>
            <%= t 'user' %>
        </th>
        <th>
            <%= t 'status' %>
        </th>

        <th>
            <%= t 'index_actions' %>
        </th>
    </tr>
    </thead>

    <tbody>
    <% @tasks.each do |task| %>

    <tr>
        <td>
            <%= link_to task.title, task_path(task) %>
        </td>
        <td>
             <%= task.event.name %>
        </td>
        <td>
          <%= task.user.email %>
        </td>

        <td>
            <%= l task.created_at, format: :short %>
          </td>
    </td>
    <% end %>
    </tbody>
</table>
<% end %>

    <%= link_to t(".new_task"), new_task_path, class: 'small radius button' %>


