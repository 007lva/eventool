<h1><%= Task.model_name.human(count: 2) %></h1>

<% if @tasks.empty? %>

    <p>No tasks found.</p>
<% else %>
<table>
    <thead>
    <tr>
        <th>
            <%= Task.human_attribute_name(:title) %>
        </th>
        <th>
            <%= t 'description' %>
        </th>
        <th>
            <%= t 'user' %>
        </th>
        <th>
            <%= t 'status' %>
        </th>

        <th>
            <%= t 'index_actions' %>
        </th>
    </tr>
    </thead>

    <tbody>
    <% @tasks.each do |task| %>

    <tr>
        <td>
            <%= link_to task.title, task_path(task) %>
        </td>
        <td>
             <%= task.description %>
        </td>


        <td>
            <%= l task.created_at, format: :short %>
        </td>

        <td>
        </td>

        <td>
           <%= link_to t('.edit'), edit_task_path(task) %><br>
           <%= link_to "Delete", task_path(task), {method: :delete, class: 'small', confirm: 'Are you sure?'} %>
        </td>
   </td>
    <% end %>
    </tbody>
</table>
<% end %>

    <%= link_to t(".new_task"), new_task_path, class: 'small radius button' %>


