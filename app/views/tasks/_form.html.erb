<%= form_for @task do |f| %>
    <div class="row">
        <div class="large-9 columns">
            <%= f.label :title %>
            <%= f.text_field :title %>
        </div>
    </div>

    <div class="row">
        <div class="large-9 columns">
            <%= f.label :description %>
            <%= f.text_area  :description %>
        </div>
    </div>


    <div class="row">
        <div class="large-9 columns">
            <%= f.label :start_at %>
            <%= f.date_field :start_at %>
        </div>
    </div>


    <div class="row">
        <div class="large-9 columns">
            <%= f.label :end_at %>
            <%= f.date_field :end_at %>
        </div>
    </div>

    <%= f.submit t('.save'), class: 'round button' %>
<% end %>
