<%= form_for @task do |f| %>
      <% @task.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
    <div class="row">
        <div class="large-8 columns">
            <%= f.label :name %>
            <%= f.text_field :title %>
        </div>
    </div>

    <div class="row">
        <div class="large-8 columns">
            <%= f.label :description %>
            <%= f.text_field  :description %>
        </div>
    </div>

    <div class="row">
        <div class="large-8 columns">
            <%= f.label :Event %>
            <%= f.text_field :event_id %>
        </div>
    </div>
    <div class="row">
        <div class="large-8 columns">
            <%= f.label :User %>
            <%= f.text_field :user_id %>
        </div>
    </div>

    <%= f.submit t('.save'), class: 'round button' %>
<% end %>
