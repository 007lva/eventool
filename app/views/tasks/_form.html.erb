<%= form_for @task do |f| %>
    <div class="row">
        <div class="large-9 columns">
            <%= f.label :title %>
            <%= f.text_field :title %>
        </div>
    </div>

    <div class="row">
        <div class="large-9 columns">
            <%= f.label :description %>
            <%= f.text_area  :description %>
        </div>
    </div>

    <div class="row">
        <div class="large-9 columns">
            <%= f.label :created_at %>
            <%= f.date_field :created_at %>
        </div>


    <div class="row">
        <div class="large-9 columns">
            <%= f.label :status %>
            <%= f.check_box :finish %>
        </div>
    </div>

    <%= f.submit t('.save'), class: 'round button' %>
<% end %>
